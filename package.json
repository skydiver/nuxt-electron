{
  "name": "nuxt-electron",
  "version": "1.0.0",
  "description": "Nuxt.js + Electron",
  "author": "Martín M.",
  "license": "MIT",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently nuxt \"node electron/wait-nuxt.js\"",
    "electron-dev": "cross-env NODE_ENV=DEV electron .",
    "electron-build": "nuxt build && electron-builder",
    "nuxt-dev": "nuxt",
    "nuxt-build": "nuxt build",
    "nuxt-start": "nuxt start",
    "nuxt-generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "nuxt": "^2.7.1",
    "@nuxtjs/axios": "^5.5.1"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.40.2",
    "electron-devtools-installer": "^2.2.4",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": ">=2.17.2",
    "eslint-plugin-jest": ">=22.6.4",
    "eslint-plugin-node": ">=9.1.0",
    "eslint-plugin-nuxt": ">=0.4.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": ">=4.1.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "nodemon": "^1.19.0",
    "prettier": "^1.17.1"
  },
  "build": {
    "extends": null,
    "productName": "nuxt-electron",
    "appId": "dev.skydiver.nuxt-electron",
    "electronVersion": "3.0.12",
    "files": [
      "build/**/*",
      "electron/*"
    ],
    "directories": {
      "buildResources": "static"
    },
    "mac": {
      "target": [
        {
          "target": "dir"
        }
      ]
    }
  }
}
